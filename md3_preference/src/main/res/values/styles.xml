<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PreferenceThemeOverlay.Material3" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">
            @style/Preference.SwitchPreferenceCompat.Material3
        </item>
    </style>

    <style name="Preference.SwitchPreferenceCompat.Material3" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/preference_widget_switch_material3</item>
    </style>

    <style name="PreferenceThemeOverlay.DialogPreference.Material3" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:layout" tools:ignore="PrivateResource">@layout/m3_alert_dialog</item>
    </style>

    <style name="PreferenceThemeOverlay.DialogPreference.Material3.Centered" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="dialogCornerRadius">28dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:background">?attr/colorSurfaceContainer</item>
        <item name="android:layout" tools:ignore="PrivateResource">@layout/m3_alert_dialog</item>
    </style>
</resources>